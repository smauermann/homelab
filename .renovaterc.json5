{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    'github>smauermann/homelab//.renovate/autoMerge.json5',
    'github>smauermann/homelab//.renovate/customManagers.json5',
    'github>smauermann/homelab//.renovate/grafanaDashboards.json5',
    'github>smauermann/homelab//.renovate/groups.json5',
    'github>smauermann/homelab//.renovate/labels.json5',
    'github>smauermann/homelab//.renovate/semanticCommits.json5',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':rebaseStalePrs',
    ':semanticCommits',
    ':timezone(Europe/Berlin)',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  ignorePaths: [
    '**/*.sops.*',
    '**/resources/**',
  ],
  kubernetes: {
    managerFilePatterns: [
      "/^kubernetes/.+\\.ya?ml$/"
    ],
  },
  packageRules: [
    {
      matchManagers: [
        'terraform',
      ],
      matchDepTypes: [
        'provider',
        'required_provider',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true
    }
  ],
}
